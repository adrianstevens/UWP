<UserControl
    x:Class="MyPiano.PianoKeys"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="600">
    <Grid Name="mainGrid" Background="SkyBlue">
        <Border BorderThickness="0, 1, 0, 0" BorderBrush="Silver">
            <Grid Name="gridKeyboard">
                <ScrollViewer x:Name="myScroll"
                              VerticalAlignment="Top"
                              VerticalScrollMode="Disabled"
                              VerticalScrollBarVisibility="Hidden"
                              ZoomMode="Disabled"
                              IsTapEnabled="False" 
                              HorizontalScrollMode="Enabled" 
                              HorizontalScrollBarVisibility="Visible">
                    <StackPanel x:Name="myStack" Orientation="Horizontal" VerticalAlignment="Top"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>
